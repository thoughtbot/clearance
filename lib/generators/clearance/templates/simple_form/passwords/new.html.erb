<div id='clearance' class='password-reset'>
  <h2><%= t '.title' %></h2>

  <p><%= t '.description' %></p>

  <%= simple_form_for :password, :url => passwords_path do |form| %>
    <div class='text-field'>
      <%= form.input :email %>
    </div>

    <div class='submit-field'>
      <%= form.button :submit %>
    </div>
  <% end %>
</div>
