<h2><%= t '.title' %></h2>

<p><%= t '.description' %></p>

<%= form_for :password, :url => passwords_path do |form| %>
  <div class='text_field'>
    <%= form.label :email %>
    <%= form.text_field :email, :type => 'email' %>
  </div>

  <div class='submit_field'>
    <%= form.submit %>
  </div>
<% end %>
